@using BookWebMVC.ViewModels.Auth
@model RegisterViewModel

<div class="container-fluid">
    <div class="row">

        <div class="col-md-12">
            <h1>Register</h1>

            <div asp-validation-summary="ValidationSummary.ModelOnly"></div>
        </div>

        <div class="col-md-6 col-md-offset-3">

            <form method="POST" class="form-horizontal"
                  asp-controller="Auth" asp-action="Register">

                <div class="form-group">
                    <label class="control-label" asp-for="Username">Username</label>
                    <input class="form-control" asp-for="Username" type="text"/>
                    <span class="text-muted" asp-validation-for="Username"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Email">e-mail</label>
                    <input class="form-control" asp-for="Email" type="email"/>
                    <span class="text-muted" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label class="control-label" asp-for="Password">Password</label>
                    <input class="form-control" asp-for="Password" type="password"/>
                    <span class="text-muted" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <input class="btn btn-default" type="reset" value="Cancel"/>
                    <input class="btn btn-default" type="submit" value="Submit"/>
                </div>

            </form>
        </div>
    </div>
</div>