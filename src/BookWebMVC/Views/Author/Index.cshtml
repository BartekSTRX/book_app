@model IEnumerable<BookWebMVC.Data.Model.Author>

<div class="row">
    @foreach (var author in Model)
    {
        <div class="col-md-3">
            <div class="thumbnail">
                <img src="@Url.Action("Show", "Image", new {id = author.ProfilePictureId})" 
                     alt="@($"{author.FirstName} {author.LastName}")"/>

                <div class="caption">
                    <h3> @author.FirstName @author.LastName </h3>
                    <p>
                         @(author.Description.Length > 100 ? $"{author.Description.Substring(0, 100)}..." : author.Description)
                    </p>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">Details</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>